{
  "name": "reservation-service",
  "version": "1.0.0",
  "main": "dist/functionApp.js",

  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "prestart": "npm run clean && npm run build",
    "start": "func start --typescript",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns=integration",
    "test:integration": "jest --config jest.integration.config.js",
    "test:concurrency": "jest --testNamePattern='Concurrency'",
    "test:idempotency": "jest --testNamePattern='Idempotency'",
    "test:edgecase": "jest --testPathPattern='edgecase.test'",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --testPathIgnorePatterns=integration",
    "test:all": "npm run test:unit && npm run test:concurrency && npm run test:idempotency && npm run test:edgecase && npm run test:integration",
    "test:categorized": "echo 'ğŸ§ª Unit Tests' && npm run test:unit && echo 'ğŸ”„ Concurrency Tests' && npm run test:concurrency && echo 'ğŸ” Idempotency Tests' && npm run test:idempotency && echo 'ğŸ”¬ Edge Case Tests' && npm run test:edgecase"
  },
  "dependencies": {
    "@azure/cosmos": "^4.6.0",
    "@azure/eventgrid": "^5.12.0",
    "@azure/functions": "^4.9.0",
    "axios": "^1.13.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/jest": "^29.5.0",
    "@types/node": "18.x",
    "@types/uuid": "^10.0.0",
    "azure-functions-core-tools": "^4.x",
    "jest": "^29.5.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.0.0"
  }
}

